{% extends 'layout.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            Bonjour ! Connectez-vous
        </div>
        <div class="card-body">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="form-group">
                    <label for="inputMail">Identifiant</label>
                    <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control"
                           required
                           autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>

                <div class="form-check">
                    <input type="checkbox" name="_remember_me" id="rememberMe" class="form-check-input">
                    <label class="form-check-label" for="rememberMe"> Se souvenir de moi</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn grey lighten-2 btn-md mt-4" type="submit">
                    Connexion
                </button>
            </form>

            <div class="mt-3">
                <a data-toggle="modal" data-target="#resetPassWord" class="indigo-text">Mot de passe
                    oublié?</a>

                <div class="modal fade" id="resetPassWord" tabindex="-1" role="dialog"
                     aria-labelledby="myModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header grey lighten-4">
                                <h4 class="modal-title">Mot de passe oublié ?</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body mx-3">
                                <form method="post" action="{{ path('app_password_send_mail') }}">
                                    <div class="form-group">
                                        <label for="email">Veuillez saisir votre mail, un message vous sera
                                            envoyé!</label>
                                        <input type="text" name="email" id="email"
                                               class="form-control"
                                               required
                                               autofocus>
                                    </div>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <button class="btn grey lighten-2 btn-md mt-4" type="submit">Envoyer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
